<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground" >

    <RelativeLayout

        android:padding="@dimen/shopping_list_overview_listitem_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/choose_store_item_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:text="Kaufland Neckarsulm"/>

        <TextView
            android:id="@+id/choose_store_item_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose_store_item_store_name"
            android:layout_alignLeft="@+id/choose_store_item_store_name"
            android:layout_alignStart="@+id/choose_store_item_store_name"
            android:layout_toLeftOf="@+id/choose_store_item_store_distance"
            android:layout_toStartOf="@+id/choose_store_item_store_distance"
            android:textSize="16sp"
            android:lines="2"
            android:text="jeahgaihsf 81264i12ahsfkgassjd ghkjsdhfoihas"/>

        <TextView
            android:id="@+id/choose_store_item_store_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/toolbar_blue"
            android:textSize="20sp"
            android:text="2,76km"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>